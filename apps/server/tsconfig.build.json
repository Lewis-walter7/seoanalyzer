{
  "extends": "./tsconfig.json",
  "exclude": ["**/*.spec.ts", "test", "jest.config.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "typeRoots": ["node_modules/@types"],
}
